# 服务器配置
PORT=3001
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ruiding_english

# JWT密钥（请修改为随机字符串）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# 支付宝配置（需要申请支付宝开放平台应用）
# 沙箱环境网关: https://openapi-sandbox.dl.alipaydev.com/gateway.do
# 正式环境网关: https://openapi.alipay.com/gateway.do
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY=https://openapi-sandbox.dl.alipaydev.com/gateway.do
ALIPAY_RETURN_URL=http://localhost:8888/payment-success.html
ALIPAY_NOTIFY_URL=http://your-domain.com/api/payment/notify

# 订阅价格（单位：元）
MONTHLY_PRICE=29
YEARLY_PRICE=299

# 免费试用天数
FREE_TRIAL_DAYS=7

# 前端地址（用于CORS）
FRONTEND_URL=http://localhost:8080
